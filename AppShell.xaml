<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui2"
    xmlns:views="clr-namespace:Maui2.Views"
    Title="Pigeon Fancier">

    <TabBar>
        <ShellContent
            Title="Team"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="History"
            ContentTemplate="{DataTemplate views:HistoryPage}"
            Route="HistoryPage" />

        <ShellContent
            Title="Transfers"
            ContentTemplate="{DataTemplate views:TransferPage}"
            Route="TransferPage" />

        <ShellContent
            Title="Sold"
            ContentTemplate="{DataTemplate views:CompletedTransferPage}"
            Route="CompletedTransferPage" />
    </TabBar>

</Shell>
